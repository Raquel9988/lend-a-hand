<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FAFAFA"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:elevation="2dp">

    <TextView
        android:id="@+id/requesterUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Requested by: user123"
        android:textColor="#333333"
        android:textStyle="bold"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/requestedItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item: Canned Beans"
        android:textColor="#444444"
        android:textSize="15sp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/remainingQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity Needed: 3"
        android:textColor="#555555"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/allocateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Allocate"
        android:textColor="#FFFFFF"
        android:backgroundTint="#4CAF50"
        android:padding="10dp"
        android:layout_gravity="start"/>
</LinearLayout>
